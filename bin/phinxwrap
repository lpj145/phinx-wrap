#!/usr/bin/env php
<?php

$autoloader = require __DIR__.'/../src/composer_autoloader.php';

if (!$autoloader()) {
    die(
        'You need to set up the project dependencies using the following commands:' . PHP_EOL .
        'curl -sS https://getcomposer.org/installer | php' . PHP_EOL .
        'php composer.phar install' . PHP_EOL
    );
}

$envPath = __DIR__.'/../../../../';

if (!file_exists($envPath.'.env')) {
    die(
            'File env on local root path: '.$envPath.' not exist'.PHP_EOL
    );
}

(new \mdantas\PhinxWrap\ConsoleApplication(
        \mdantas\PhinxWrap\PhinxConfiguration::envToConfigInterface($envPath)
))
    ->run()
;